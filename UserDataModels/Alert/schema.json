{
  "$schema": "http://json-schema.org/schema#",
  "id": "https://fiware.github.io/dataModels/Alert/schema.json",
  "title": "Alert data model JSON Schema",
  "description": "An alert generated by a user in a givel location",
  "type": "object",
  "allOf": [
    { "$ref": "https://fiware.github.io/dataModels/common-schema.json#/definitions/GSMA-Commons" },
    { "$ref": "https://fiware.github.io/dataModels/common-schema.json#/definitions/Location-Commons" },  
    {
      "properties": {
        "eventObserved": {
          "oneOf": [
            { "type": "string", "format": "date-time" },
            { "type": "object",
              "properties": {
                "start": { "type": "string", "format": "date-time" },
                "end": { "type": "string", "format": "date-time" }
              }
            }
          ]
        },
	 "severity": {
        "type": "integer",
		"minimum": 0,
        "maximum": 3
     },
	 "alertType": {
          "type": "string",
          "enum": [
            "TrafficJam",
            "CarAccident",
            "WeatherCondition",
			"Pollutations",
            "Pollen",
			"AsthmaAttacks"
          ]
        },
	"refEvent": {
          "$ref": "https://fiware.github.io/dataModels/common-schema.json#/definitions/EntityIdentifierType"
        },
        "refUser": {
          "$ref": "https://fiware.github.io/dataModels/common-schema.json#/definitions/EntityIdentifierType"
        },
	"type": {
          "type": "string",
            "enum": [
              "Alert"
            ],
          "description": "NGSI Entity type"
        }
      }
    }],
    "required": [
    "id",
    "type",
	"description",
	"location"
  ]
} 

